<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/header %>
    <title>Base De Datos</title>
  </head>

  <body>
    <%include partials/navigation%>

    <div class="container p-4">
      <div class="row">
        <%if (ropas.length > 0) {%> <% ropas.forEach(function(ropa) { %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-header bg-primary text-white">
              <%= ropa.titulo %>
            </div>
            <img class="card-img-top" src="<%= ropa.imagen %>" />
            <div class="card card-body"><%= ropa.precio %></div>
            <div class="card card-body"><%= ropa.talla %></div>
            <div class="card card-body"><%= ropa.stock %></div>
            <div class="card card-body"><%= ropa.des %></div>
            <div class="card-footer">
              <a href="/delete/<%= ropa.id %>" class="btn btn-danger btn-block">
                Delete
              </a>
            </div>
          </div>
        </div>
        <%})%> <%} else {%>
        <div class="card card-body text-center">
          <p>Sin Ropas. <a href="/new-entry">Agregar Ropa</a></p>
        </div>
        <%}%>
      </div>
    </div>
  </body>
</html>
